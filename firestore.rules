rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all documents.
    // Allow write access only for authenticated users.
    // This is ideal for a demo where anyone can browse,
    // but actions like checkout require a login.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
