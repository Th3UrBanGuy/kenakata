rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read and write to any document in any collection.
    // This is a permissive rule set for demonstration purposes to ensure the application
    // runs smoothly without any permission-denied errors during the contest.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
