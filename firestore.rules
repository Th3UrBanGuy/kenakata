
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Unrestricted access for demo purposes.
    // Anyone (including non-logged-in users) can read data.
    // Any logged-in user can write data.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
